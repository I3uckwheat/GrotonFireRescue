extends ../layout

block content
  .inner
    h1 Add Winner
    form(method='POST' id='winnerForm')
      fieldSet(name='name')
        legend Name
        label(for='firstName') First Name
        input(type='text' name='firstName' required)
        label(for='lastName') Last Name
        input(type='text' name='lastName' required)

      fieldset(name="date")
        legend Date - mm/dd/yyyy
        input(type='number' name='month' min='1' max='12' placeholder='3' required)
        input(type='number' name='day'  min='1' max='31' placeholder='22' required)
        input(type='number' name='year'  min='2018' max='2099' placeholder='2018' required)

      fieldset(name='gun')
        legend Gun
        input(type='text' name='gun' required)

      input(type='submit' value='Submit')
