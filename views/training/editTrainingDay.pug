extends ../layout

block stylesheets


block content
  - var dateRegex = '^(?:(?:31(\/|-|\.)(?:0?[13578]|1[02]))\1|(?:(?:29|30)(\/|-|\.)(?:0?[1,3-9]|1[0-2])\2))(?:(?:1[6-9]|[2-9]\d)?\d{2})$|^(?:29(\/|-|\.)0?2\3(?:(?:(?:1[6-9]|[2-9]\d)?(?:0[48]|[2468][048]|[13579][26])|(?:(?:16|[2468][048]|[3579][26])00))))$|^(?:0?[1-9]|1\d|2[0-8])(\/|-|\.)(?:(?:0?[1-9])|(?:1[0-2]))\4(?:(?:1[6-9]|[2-9]\d)?\d{2})$'
  - var timeRegex = 'b((1[0-2]|0?[1-9]):([0-5][0-9]) ([AaPp][Mm]))'
  .inner
    form(method="POST")
      .trainingTitle
        label(for="title") Title
        input(type="text" name="title" placeholder="Truck Training" required)

      fieldset(name="date")
        legend Date
        input(type='number' name='month' min='1' max='12' placeholder='3' required)
        input(type='number' name='day'  min='1' max='31' placeholder='22' required)
        input(type='number' name='year'  min='2018' max='2099' placeholder='2018' required)

      fieldset(name='startTime')
        legend Start Time
        input(type='number' name='hour' min='1' max='12' placeholder='12' required)
        input(type='number' name='minute' min='0' max='59' placeholder='00' required)
        select(name="ampm")
          option(value="am") AM
          option(value="pm") PM

      fieldset(name='endTime')
        legend End Time
        input(type='number' name='hour' min='1' max='12' placeholder='12' required)
        input(type='number' name='minute' min='0' max='59' placeholder='00' required)
        select(name="ampm")
          option(value="am") AM
          option(value="pm") PM

      .info
        .location
          label(for="location") Location
          input(type="text" name="location" placeholder="Groton Fire Station" required)
        .extra
          label(for="info") Extra Info
          textarea(name="info", cols="60", rows="10" placeholder="e.g 'Bring Water', 'Bring Fire Gear'")

      input(type="submit" value="Submit")