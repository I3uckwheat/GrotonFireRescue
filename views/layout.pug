doctype html
html
  head
    title #{title || h.siteName}
    meta(name="viewport" content="width=device-width, initial-scale=1")
    link(rel="stylesheet" href="/stylesheets/reset.css")
    link(rel="stylesheet" href="/stylesheets/style.css")
    link(href="https://fonts.googleapis.com/css?family=Alfa+Slab+One" rel="stylesheet")
    if user
      link(rel="stylesheet" href="/stylesheets/admin.css")
    block stylesheets

  body

    header
      a(href="/") #[img#cross(src="/images/cross.png")]
      nav.primary-nav
        a(href="/") Home
        a(href="/gallery") Photo Gallery
        a(href="/gun-drawing") Gun Drawing
        a(href="/training") Training/Meetings
        //- li #[a(href="/calender") Calender Fundraiser] //- TODO - implement

      if user
        include admin/mixins/_adminBar
        +adminBar()


    .flashes
      for flash in flashes
        .flash
          p=flash
          button.close close

    .content
      block content

    //- footer


  script(src="/javascript/layout.js")
  block scripts
